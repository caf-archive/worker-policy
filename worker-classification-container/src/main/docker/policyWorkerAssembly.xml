<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
<id>Classification Worker Assembly Information</id>
<dependencySets>
    <dependencySet>
        <useProjectArtifact>false</useProjectArtifact>
        <scope>runtime</scope>
        <useTransitiveDependencies>true</useTransitiveDependencies>
        <useTransitiveFiltering>true</useTransitiveFiltering>
        <excludes>
            <exclude>com.github.cafapi:container-cert-script</exclude>
            <exclude>com.github.cafdataprocessing:corepolicy-database</exclude>
            <exclude>com.github.krallin:tini</exclude>
        </excludes>
        <outputDirectory>PolicyWorker</outputDirectory>
    </dependencySet>
    <!-- Explicitly specifying tini dependency so we can set execute permission on the file -->
    <dependencySet>
        <useProjectArtifact>false</useProjectArtifact>
        <fileMode>0755</fileMode>
        <includes>
            <include>com.github.krallin:tini</include>
        </includes>
    </dependencySet>
    <!-- unpack the container-cert-script tar so the script files are available to run -->
    <dependencySet>
        <useProjectArtifact>false</useProjectArtifact>
        <useTransitiveFiltering>true</useTransitiveFiltering>
        <unpack>true</unpack>
        <includes>
            <include>com.github.cafapi:container-cert-script</include>
        </includes>
    </dependencySet>
</dependencySets>
<files>
    <file>
        <source>
            ./policy.yaml
        </source>
        <outputDirectory>${fileSet.outputDirectory}</outputDirectory>
        <lineEnding>unix</lineEnding>
    </file>
    <file>
        <source>./start.sh</source>
        <outputDirectory>${fileSet.outputDirectory}</outputDirectory>
        <fileMode>0755</fileMode>
        <lineEnding>unix</lineEnding>
    </file>
</files>
<fileSets>
    <fileSet>
        <directory>${project.build.directory}/config-files</directory>
        <outputDirectory>config</outputDirectory>
    </fileSet>
</fileSets>
</assembly>
                                    
